{
     "repositories": [
          {
               "url": "https://github.com/HotelistanMarketing/commons",
               "type": "git"
          }
     ],
     "require": {
          "php": "~8.2",
          "oomphinc/composer-installers-extender": "^2.0",
          "hotelistan/commons": "dev-main"
     },
     "extra": {
          "installer-types": [
               "custom-library"
          ],
          "installer-paths": {
               "{$name}": [
                    "hotelistan/commons"
               ]
          }
     },
     "config": {
          "allow-plugins": {
               "composer/installers": true,
               "oomphinc/composer-installers-extender": true
          }
     },
     "scripts": {
          "post-install-cmd": [
               "chmod +x ./commons/devtools/run-lessc.sh",
               "./commons/devtools/run-lessc.sh"
          ]
     }
}
